@model CategoryVM



<div class="container">
    <div class="panel panel-primary">
        <div class="panel panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th colspan="2" style="text-align:center;padding-right:20px">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>

                            <td>@Html.ActionLink("Update", "UpdateCategory", new { id = item.CategoryID }, new { @class = "btn btn-warning" })</td>
                            <td>@Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }

                </tbody>


            </table>

            <div>
                <input type="button" style="text-align:center"; class="btn btn-primary" value="Add New Category" onclick="location.href='@Url.Action("AddCategory", "Category")'" />
            </div>



        </div>


    </div>
</div>





